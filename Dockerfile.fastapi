FROM python:3.11-slim

WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY app/ ./app/
COPY data/ ./data/

# Expose port
EXPOSE 8000

# Run the application
CMD ["fastapi", "run", "./app/main.py", "--host", "0.0.0.0", "--port", "8000"]
